<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスクの内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, '状態' %>
  <%= f.text_field :status %>
  
  
  <%= f.submit '更新' %>
<% end %>
